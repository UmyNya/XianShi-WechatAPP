/* pages/request/request.wxss */
.item{
  display: flex;
  height: 20vh;
  border-bottom: 1rpx solid black;
}
.img_wrap{
  height: 20vh;
  flex:2;
  overflow: hidden;
  justify-content: center;
  align-items: center;
  /* background-color: aqua; */
}
image{
  width: 100%;
  
}
.info_wrap{
  height: 20vh;
  flex:3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow: hidden;
  /* background-color: red; */
}
.info_name{
  color: var(--themeColor);
  font-size: 32rpx;
  text-align: center;
  /* 按box布局 超出部分隐藏 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出一行的文字用...代替 */
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.info_desc{
  /* 按box布局 超出部分隐藏  */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 超出两行的文字用...代替 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.info_price{
  color: red;
}


